year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)

bibentry(bibtype="Manual",
	title ="{SDAR}: Stratigraphic Data Analysis",
	author = c(person("J. R. Ortiz"),
	           person("C. Jaramillo")),
	year = year,
	note = note,
    url = "https://cran.r-project.org/package=SDAR",

	textVersion =
	paste0("Ortiz, J., and Jaramillo, C., (",
	       year,
	       "). SDAR: a Toolkit for Stratigraphic Data Analysis. ",
	       note, ".")
)

